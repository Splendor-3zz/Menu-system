datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @map("_id")
  email String
  title String?
  role Role @default(USER)
  createdAt DateTime @default(now())
  address Address?
  category Category[]
  item Item[]
}

type Address {
    city String
    street String
    building String
    apartment String
}

model Category {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  imageUrl String
  userId String
  user   User   @relation(fields: [userId], references: [id])
  items  Item[]
  createdAt DateTime @default(now())
}

model Item{
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title      String
    price     Float
    imageUrl String
    available Boolean  @default(true)
    user   User   @relation(fields: [userId], references: [id])
    userId String
    category  Category @relation(fields: [categoryId], references: [id])
    categoryId String  @db.ObjectId
    createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
